<h1>Listing owners</h1>

<%= form_for @search do |f| %>   
<p>   
<%= f.label :firtsName_contains %>   
<%= f.text_field :firtsName_contains %>   
</p>
<p>   
<%= f.label :secondName_contains %>   
<%= f.text_field :secondName_contains %>   
</p>  
<p> 
<%= f.label :sex_name_contains %>  
<%= f.text_field :sex_name_contains %>
</p>
<p> 
<%= f.label :typedocument_name_contains %>  
<%= f.text_field :typedocument_name_contains %>
</p>
<p class="button"><%= f.submit "Search" %> </p>   
<% end %>

<table>
  <tr>
    <th>Firtsname</th>
    <th>Secondname</th>
    <th>Sex</th>
    <th>Typedoi</th>
    <th>Numerodoi</th>
    <th>Phone</th>
    <th>Birthday</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @owners.each do |owner| %>
  <tr>
    <td><%= owner.firtsName %></td>
    <td><%= owner.secondName %></td>
    <td><%= owner.sex.name %></td>
    <td><%= owner.typedocument.name %></td>
    <td><%= owner.numeroDOI %></td>
    <td><%= owner.phone %></td>
    <td><%= owner.birthday.strftime("%d/%m/%Y") %></td>
    <td><%= link_to 'Show', owner %></td>
	<td><%= link_to 'Edit', edit_owner_path(owner) %></td>
    <td><%= link_to 'Destroy', owner, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

