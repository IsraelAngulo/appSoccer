  </tr>

<% @fields.each do |field| %>
  <tr>
	<td><%= field.local.descriptiveNameLocal %></td>
    <td><%= field.name %></td>
    <td><%= field.day %></td>
    <td><%= field.starname %></td>
    <td><%= field.endtime %></td>
    <td><%= field.dayprice %></td>
    <td><%= field.nightprice %></td>
    <td><%= link_to 'Show', field %></td>
    <td><%= link_to 'Edit', edit_field_path(field) %></td>
    <td><%= link_to 'Destroy', field, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

