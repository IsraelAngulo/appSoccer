<!DOCTYPE html>
<html>
<head>
  <title>AppSoccer</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if current_user %>
	<div id="user_nav" style="color:#00F">
		  Bienvenido: <%= current_user.username %> | 
          <%= link_to "Edit Profile", edit_user_path(:current) %> |
          <%= link_to "Logout", logout_path %>
	</div>
	
	<% if current_user.typeuser_id == 1 %> <!-- para dueno -->
		<div style="color:#FFF">
			<%= link_to "Registrar local", localnew_path %> |
			<%= link_to "Registrar cancha de futbol", fieldsnew_path %> |
			<%= link_to "Publicar Eventos", eventindex_path %> |
			<%= link_to "Registrar Albunes", photoalbum_path %>
		</div>
	<% elsif current_user.typeuser_id == 2 %> <!-- para cliente -->
		<div style="color:#FFF">
			<%= link_to "Alquilar Canchas", field_path %>
		</div>
	<% else %> <!-- para administrador -->
		<div style="color:#FFF">
			<%= link_to "Agregar sexo", new_sex_path %> |
			<%= link_to "Agregar Tipo de documento", new_typedocument_path %> |
			<%= link_to "Agregar distrito", new_district_path %>
		</div>
	<% end %>
<% else %>
	<div id="user_nav" style="color:#00F">
          <%= link_to "Register", new_user_path %> |
          <%= link_to "Login", login_path %>
	</div>
<% end %>

<div class="login" style="color:#FFF">
	<%= yield %>
</div>

<!--<div class="player-1"><img src="../assets/Images/player-1.png" width="480" height="640" alt="" /></div>-->
<div class="player-1"></div>

</body>
</html>