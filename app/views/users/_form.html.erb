         <%= f.label :email_confirmation %>
         <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :typeuser %><br />
    <%= f.collection_select :typeuser_id, Typeuser.all, :id, :nameDescription, :prompt => true %>
