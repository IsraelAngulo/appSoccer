<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">

    <%= f.input :username %>
	
	<%= f.input :password %>
	
	<%= f.input :password_confirmation %>

  </div>

  <div class="field">
         <%= f.label :email %>
         <%= f.text_field :email %>
  </div>
  <div class="field">
         <%= f.label :email_confirmation %>
         <%= f.text_field :email %>
  </div>
	   
  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
