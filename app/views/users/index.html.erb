<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Documentnumber</th>
    <th>Email</th>
    <th>Emailconfirmation</th>
    <th>Datebirth</th>
    <th>Phone</th>
    <th>Username</th>
    <th>Password</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.firstname %></td>
    <td><%= user.lastname %></td>
    <td><%= user.documentnumber %></td>
    <td><%= user.email %></td>
    <td><%= user.emailconfirmation %></td>
    <td><%= user.datebirth %></td>
    <td><%= user.phone %></td>
    <td><%= user.username %></td>
    <td><%= user.password %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

