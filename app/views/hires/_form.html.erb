<%= simple_form_for(@hire) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :username, :input_html => { :value => current_user.username, :readonly => "readonly" } %>
    <%= f.association :field %>
    <%= f.input :dayCare %>
    <%= f.input :hoursCare %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
